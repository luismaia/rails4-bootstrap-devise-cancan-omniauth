<div class="form-actions">

  <!-- Back to Module Grid button -->
  <%= link_to t('.back', :default => t("helpers.links.back")), back_path, :class => 'btn btn-default' %>

  <!-- Edit button -->
  <% unless edit_path.blank? %>
      <% if can? :update, model_class %>
          <% if can? :update, current_registry %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_path, :class => 'btn btn-default' %>
          <% end %>
      <% end %>
  <% end %>

  <!-- Copy button -->
  <% unless copy_path.blank? %>
      <% if can? :copy, model_class %>
          <%= link_to t('.copy', :default => t("menu.copy")), copy_path, :class => 'btn btn-success' %>
      <% end %>
  <% end %>

  <!-- Add another button -->
  <% unless new_path.blank? %>
      <% if can? :create, model_class %>
          <%= link_to t('.new', :default => t("menu.addAnother")), new_path, :class => 'btn btn-success' %>
      <% end %>
  <% end %>

  <!-- Delete button -->
  <% unless destroy_path.blank? %>
      <% if can? :destroy, model_class %>
          <% if can? :update, current_registry %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          destroy_path,
                          :method => 'delete',
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-danger' %>
          <% end %>
      <% end %>
  <% end %>

</div>
