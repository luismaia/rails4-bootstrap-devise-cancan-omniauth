<% if session[:omniauth].nil? %>
    <h2>Sign up</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>

        <%= f.input :first_name, :autofocus => true %>
        <%= f.input :last_name %>
        <%= f.input :email, :required => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
        <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>

<% else %>

    <h2>Complete your <%= resource_name.to_s.humanize %> information</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true, :html => {:class => 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, autofocus: true %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>

        <div class="control-group string required">
          <label class="control-label"><%= t('model.sex') %></label>

          <div class="controls">
            <%= select_tag "sex", "<option>Masculine</option><option>Feminine</option><option>Undefined</option>".html_safe %>
          </div>
        </div>

        <%= f.button :submit, 'Sign up', :class => 'btn-primary', :id => "registerButtonId" %>
    <% end %>

<% end %>