<% if identifier == :username %>
    <%= f.input :username, label: t("model.username"), autofocus: true, input_html: {class: 'special'} %>
<% else %>
    <%= f.input :email, autofocus: true, input_html: {class: 'special'} %>
<% end %>

<%= f.input :password %>
<%= f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false if devise_mapping.rememberable? %>
